    <style name="text_debug">
        <item name="android:textColor">@color/debug_text</item>
        <item name="android:textSize">@dimen/debug_text_size</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/debug_text_bg</item>
    </style>

    <style name="text_system_debug">
        <item name="android:textColor">@color/debug_text</item>
        <item name="android:textSize">@dimen/debug_text_size</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="text_message">
        <item name="android:textColor">@color/message_text_color</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="text_message_game">
        <item name="android:textColor">@color/message_game_text_color</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="text_system_message">
        <item name="android:textColor">@color/message_system_text_color</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

